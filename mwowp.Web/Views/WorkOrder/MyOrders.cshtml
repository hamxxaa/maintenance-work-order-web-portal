@model IEnumerable<mwowp.Web.Models.WorkOrder>

@{
    ViewData["Title"] = "My Work Orders";
}

<div class="container py-3">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">My Work Orders</h1>
            <p class="text-muted small mb-0">
                Work orders you have created. Track their status and open details when needed.
            </p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 bg-light">
            <div class="card-body text-center py-4">
                <h2 class="h6 mb-2">No work orders yet</h2>
                <p class="text-muted small mb-3">
                    You haven’t submitted any work orders. Create one to report a maintenance issue.
                </p>
                <a asp-controller="WorkOrder"
                   asp-action="Create"
                   class="btn btn-primary btn-sm">
                    Create Work Order
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Asset</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Created At</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var wo in Model)
                            {
                                <tr>
                                    <td>@wo.Asset?.Name</td>
                                    <td>@wo.Title</td>
                                    <td>@wo.Status</td>
                                    <td>@wo.Priority</td>
                                    <td>@wo.CreatedAt.ToShortDateString()</td>
                                    <td>
                                        <a asp-controller="WorkOrder"
                                           asp-action="ViewTask"
                                           asp-route-id="@wo.Id"
                                           class="btn btn-outline-primary btn-sm">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light small text-muted">
                Open any work order to see details, attachments, history, and technician updates.
            </div>
        </div>
    }
</div>
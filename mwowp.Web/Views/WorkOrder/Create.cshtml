@model mwowp.Web.Models.WorkOrder

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="AssetId"></label>
        <select asp-for="AssetId" asp-items="@(new SelectList(ViewBag.Assets, "Id", "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority" class="form-select">
            <option value="@PriorityLevel.Low">Low(@FeeDefinitions.GetFee(PriorityLevel.Low)$)</option>
            <option value="@PriorityLevel.Medium">Medium(@FeeDefinitions.GetFee(PriorityLevel.Medium)$)</option>
            <option value="@PriorityLevel.High">High(@FeeDefinitions.GetFee(PriorityLevel.High)$)</option>
            <option value="@PriorityLevel.Critical">Critical(@FeeDefinitions.GetFee(PriorityLevel.Critical)$) </option>
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resimler (çoklu)</label>
        <input type="file" name="images" multiple accept="image/*" class="form-control" />
        <small class="form-text text-muted">Birden fazla resim seçebilirsiniz. (JPG, PNG, GIF, WEBP - max 5MB/ dosya)</small>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@model IEnumerable<mwowp.Web.Models.ApplicationUser>

@{
    ViewData["Title"] = "Tekniker Listesi";
}

<h2>Teknikerler</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Kayıtlı tekniker bulunamadı.</div>
}
else
{
    <table class="table table-striped table-sm align-middle">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th style="width:140px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.FullName</td>
                <td>@t.UserName</td>
                <td>@t.Email</td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@t.Id"
                       class="btn btn-sm btn-primary">
                        Sayfaya Git
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

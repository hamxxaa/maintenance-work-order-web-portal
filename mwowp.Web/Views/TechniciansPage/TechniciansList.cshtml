@model IEnumerable<mwowp.Web.Models.ApplicationUser>

@{
    ViewData["Title"] = "Technicians";
}

<div class="container py-3">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Technicians</h1>
            <p class="text-muted small mb-0">
                List of all technicians in the system. Open a profile to review their information and assigned work.
            </p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 bg-light">
            <div class="card-body py-4 text-center">
                <h2 class="h6 mb-2">No technicians found</h2>
                <p class="text-muted small mb-0">
                    There are currently no registered technicians. Once users are assigned the Technician role, they will appear here.
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th style="width: 140px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                <tr>
                                    <td>@t.FullName</td>
                                    <td>@t.UserName</td>
                                    <td>@t.Email</td>
                                    <td>
                                        <a asp-action="Details"
                                           asp-route-id="@t.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            View Profile
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light small text-muted">
                Use technician profiles together with the work order list to balance workload and assignments.
            </div>
        </div>
    }
</div>
@using mwowp.Web.Models

@{
    ViewData["Title"] = "Technician Details";
    var technician = ViewBag.Technician as ApplicationUser;
    var workOrders = ViewBag.WorkOrders as List<WorkOrder>;
}

<div class="container py-3">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Technician Details</h1>
            <p class="text-muted small mb-0">
                View technician information and the work orders assigned to them.
            </p>
        </div>
        <a asp-action="List" class="btn btn-outline-secondary btn-sm">
            Back to Technicians
        </a>
    </div>

    @if (technician == null)
    {
        <div class="alert alert-danger">
            Technician not found.
        </div>
    }
    else
    {
        <!-- Technician info -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white">
                <h2 class="h6 mb-0">Profile</h2>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted small">Full Name</dt>
                    <dd class="col-sm-9">@technician.FullName</dd>

                    <dt class="col-sm-3 text-muted small">Username</dt>
                    <dd class="col-sm-9">@technician.UserName</dd>

                    <dt class="col-sm-3 text-muted small">Email</dt>
                    <dd class="col-sm-9">@technician.Email</dd>

                    <dt class="col-sm-3 text-muted small">Phone</dt>
                    <dd class="col-sm-9">@technician.PhoneNumber</dd>

                    <dt class="col-sm-3 text-muted small">Id</dt>
                    <dd class="col-sm-9">@technician.Id</dd>
                </dl>
            </div>
        </div>

        <!-- Assigned work orders -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h6 mb-0">Assigned Work Orders</h2>
            @if (workOrders != null)
            {
                <span class="badge bg-light text-muted small">
                    @workOrders.Count work order(s)
                </span>
            }
        </div>

        @if (workOrders == null || !workOrders.Any())
        {
            <div class="card border-0 bg-light mb-3">
                <div class="card-body py-3 text-center">
                    <p class="text-muted small mb-0">
                        There are no work orders currently assigned to this technician.
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm table-striped align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Asset</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Created By</th>
                                    <th style="width: 240px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var wo in workOrders)
                                {
                                    <tr>
                                        <td>@wo.Id</td>
                                        <td>@wo.Title</td>
                                        <td>@wo.Asset?.Name</td>
                                        <td>@wo.Status</td>
                                        <td>@(wo.Priority?.ToString() ?? "-")</td>
                                        <td>@wo.CreatedByUser?.FullName</td>
                                        <td>
                                            <div class="d-flex flex-wrap gap-1">
                                                <a asp-controller="WorkOrder"
                                                   asp-action="ViewTask"
                                                   asp-route-id="@wo.Id"
                                                   class="btn btn-sm btn-outline-info">
                                                    View
                                                </a>
                                                <a asp-controller="WorkOrder"
                                                   asp-action="EditOrder"
                                                   asp-route-id="@wo.Id"
                                                   class="btn btn-sm btn-warning">
                                                    Edit
                                                </a>
                                                @if (wo.Status == WorkOrderStatus.Completed)
                                                {
                                                    <a asp-controller="WorkOrder"
                                                       asp-action="Inspection"
                                                       asp-route-id="@wo.Id"
                                                       class="btn btn-sm btn-secondary">
                                                        Inspection
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light small text-muted">
                    Use these actions to review and manage the technician’s workload and completed jobs.
                </div>
            </div>
        }
    }
</div>
@model mwowp.Web.Models.Asset

@{
    ViewData["Title"] = "Create Asset";
}

<div class="container py-3">
    <!-- Page header -->
    <div class="mb-3">
        <h1 class="h4 mb-1">Create New Asset</h1>
        <p class="text-muted small mb-0">
            Register a new asset so you can create and track related maintenance work orders.
        </p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Brand -->
                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label"></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Model -->
                        <div class="mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger small"></span>
                        </div>

                        <!-- Serial Number -->
                        <div class="mb-3">
                            <label asp-for="SerialNumber" class="form-label"></label>
                            <input asp-for="SerialNumber" class="form-control" />
                            <span asp-validation-for="SerialNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <a asp-action="MyAssets" class="btn btn-outline-secondary btn-sm">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-sm">
                        Create Asset
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer bg-light small text-muted">
            Make sure the serial number and model are correct. This information will be used in work orders and reports.
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
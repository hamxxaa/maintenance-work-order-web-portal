@model IEnumerable<mwowp.Web.Models.Asset>

@{
    ViewData["Title"] = "My Assets";
}

<div class="container py-3">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">My Assets</h1>
            <p class="text-muted small mb-0">
                Assets you are responsible for. You can submit work orders for these items.
            </p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                Add New Asset
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 bg-light">
            <div class="card-body text-center py-4">
                <h2 class="h6 mb-2">No assets yet</h2>
                <p class="text-muted small mb-3">
                    You have not registered any assets. Create your first asset to start submitting work orders.
                </p>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    Create Asset
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Serial Number</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th style="width:160px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asset in Model)
                            {
                                <tr>
                                    <td>@asset.Name</td>
                                    <td>@asset.Brand</td>
                                    <td>@asset.Model</td>
                                    <td>@asset.SerialNumber</td>
                                    <td>@asset.Status</td>
                                    <td>@asset.CreatedAt.ToShortDateString()</td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <a asp-controller="WorkOrder"
                                               asp-action="AssetOrders"
                                               asp-route-assetId="@asset.Id"
                                               class="btn btn-outline-primary btn-sm">
                                                View Work Orders
                                            </a>
                                            <a asp-action="Create"
                                               asp-controller="WorkOrder"
                                               asp-route-assetId="@asset.Id"
                                               class="btn btn-outline-secondary btn-sm">
                                                New Work Order
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light small text-muted">
                Use “View Work Orders” to review all maintenance tasks linked to an asset.
            </div>
        </div>
    }
</div>